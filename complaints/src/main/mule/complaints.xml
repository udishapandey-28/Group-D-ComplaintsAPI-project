    <flow name="post:\complaints:application\json:complaints-config">
        <ee:transform doc:name="Transform Message" doc:id="0a2d4d52-f2d3-488e-8a95-75c3f48a73a6">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/java
---
payload]]></ee:set-payload>
            </ee:message>
        </ee:transform>
        <flow-ref doc:name="Flow Reference" doc:id="4bdc3b69-eaf3-4582-b282-118a5cbdf1bd" name="postComplaint" />
        <ee:transform xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  message: "complaint registered with complaint id " ++ vars.complaintId as String
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
</mule>
