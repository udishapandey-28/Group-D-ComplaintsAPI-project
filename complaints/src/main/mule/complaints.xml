        <ee:transform>
            <ee:variables>
                <ee:set-variable variableName="complaintsNumber">attributes.uriParams.'complaintsNumber'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <flow-ref doc:name="Flow Reference" doc:id="42dad8c4-c254-4114-bc40-61976f804498" name="getComplaintByNumber" />
